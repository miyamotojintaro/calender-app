<p id="notice"><%= notice %></p>
<div class="calendar-show">
  <div class="calendar-show-logo">予定の詳細</div>
  <div class="calendar-show-layout">
    <div class="calendar-show-title">予定の内容</div>
      <div class="calendar-show-tag"><%= @calendar.title %></div>

      <div class="calendar-show-time">日時</div>
      <div class="calendar-show-tag"><%= @calendar.start_time.strftime("%m-%d") %></div>
  </div>
</div>
<div class="calendar-show-message">
  <%= link_to '編集', edit_calendar_path(@calendar) %>
  <%= link_to '戻る', calendars_path %>
</div>
